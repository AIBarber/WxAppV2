<!--pages/photo_share/share.wxml-->
<movable-area style="height: 100%; width: 100%;" scale-area>
  <movable-view style="height: 100%; width: 100%;" direction="all"  scale scale-min="1" scale-max="5" scale-value="1">
    <image src='{{img}}' mode='scaleToFill' style='width:100%;height:100%'></image>
  </movable-view>
</movable-area>

<view style="display:flex;justify-content:space-around;position:fixed;bottom:20%;z-index:100;width:100%">
  <button open-type="share" class='button'>分享</button>
  <button class='button2' bindtap='saveToLocal'> 保存至相册</button>
</view>


