.listview {
	margin-top: 1rpx;
  margin-bottom: 10rpx;
}

/*列表项*/
.listview .item {
	background: white;
	display: flex;
	flex-direction: row;
	align-items: center;
	position: relative;
	margin-left: 0;
	height: 40rpx;
}

/*箭头*/
.listview .item:after {
	content: " ";
	height: 8rpx;
	width: 8rpx;
	border-width: 2rpx 2rpx 0 0;
	border-color: #ccc;
	border-style: solid;
	transform:rotate(45deg);
	position: absolute;
	margin-top: -4rpx;
	top: 50%;
	right: 22rpx;
}

.listview .item .hd {
	width: 25rpx;
	height: 25rpx;
	margin: 5rpx 0;
	padding-left: 20rpx;
}

.listview .item .bd {
	font-size: 32rpx;
	margin-left: 10rpx;
	flex: 1;
  padding: 10rpx;
}
