} */
.nav_section_items .section_image{
    width:120rpx;
    height:120rpx;
      border-radius: 60rpx;
      margin-right: 20rpx;
     
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
    border-radius: 60rpx;
}
.nav_section_items .section_cont{
    width:300rpx;
    font-size:26rpx;
    color:#a9a9a9;
    
}

.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .section_cont_sub{
    font-size: 30rpx;
    /* line-height:60rpx; */
    margin-top: -10rpx;
    color:#000;
    margin-bottom:10rpx;
}
.nav_section_items .section_cont .section_cont_price{
    font-size:26rpx;
    color:#999999;
}
