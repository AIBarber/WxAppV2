/* pages/Barber/seat/seat.wxss */
.row{
  display:flex;
  flex-direction:row;
  padding-left: 5%;
  padding-top: 18rpx;
  font-size: 15px;
  background: white;
  height: 35px;
  text-align: center;
}
.title{
  font-size: 17px;
}
.imageLeft{
  width: 12px;
  height: 12px;
}
.button{
  border-radius: 80rpx;
  color: black;
  font-size: 15px;
  text-align: center;
  margin-top: -5px;
  margin-right: 3%;
}.button-hover{
  background: rgb(107, 197, 178);
  color: white;
}button::after {
  border-radius: 80rpx;
}
.line{
  width:100%;
  height:8px; 
  /* border: 1px solid rgb(236, 229, 229); */
  background:rgb(241, 236, 236);
}
.input{
  width: 100%;
  /* height: 35px; */
  font-size: 15px;
  background: white;
  z-index: 1;
  padding-left: 20rpx;
  border-radius: 10rpx;
}
.button2{
  width: 150px;
  height: 30px;
  border-radius: 80rpx;
  color: rgb(63, 197, 164);
  font-size: 15px;
  margin-right: 10px;
  border: 1px solid rgb(63, 197, 164);
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: -2px;
}.button2-hover{
  background: rgb(76, 184, 160);
}button2::after {
  border-radius: 80rpx;
}
.list {
  width: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
  border-bottom: 1px solid #ccc;
  background: white;
}

/*头像*/
.avatar {
	width: 60px;
	height: 60px;
	margin-left: 10px;
  margin-top: 8px;
  margin-bottom: 8px;
	border-radius: 50%;
}
.time{
  margin-left: 10px;
  font-size: 16px;
}
.imageRight{
  width: 12px;
  height: 12px;
  margin-left: 30%;
}