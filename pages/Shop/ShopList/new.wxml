   <view class="nav_section">
    <view wx:if="{{shoplist}}">
        <block wx:for="{{shoplist}}" wx:key="item.storeId">
            <view class="nav_section_items" bindtap="navigateDetail" data-aid="{{item.storeId}}">
                <!--image-->
                <view class="section_image" >
                <block wx:if="{{item.headImage}}">
                    <image src="{{item.headImage}}" mode="aspectFill"></image>
                </block>
                <block wx:else>
                    <image src="../../../icon/default_pic.png" mode="aspectFill"></image>
                </block>
                </view>
                <!--content-->
                <view class="section_cont" >
                    <view class="section_cont_sub">
                        <text style="font-size: 26rpx" decode="{{true}}">{{item.name}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text> <text style="color:#999999;font-size: 22rpx">距您</text><text style="color:#999999;font-size: 22rpx">{{item.distance}}</text><text style="color:#999999;font-size: 22rpx">米</text>
                        
                    </view>
                    <view class="section_cont_price" style="color:#999999;font-size: 22rpx">在店人数：{{item.customerNum}}</view>
                    <view>起步价:
                    <text class="section_cont_price" style="font-size: 22rpx">{{item.startingPrice}}</text>元</view>
                    <view style="font-size: 22rpx">地址：{{item.address}}</view>
                </view>
            </view>
            
        </block>
    </view>
    
    <view wx:else>暂无数据</view>
          
</view>