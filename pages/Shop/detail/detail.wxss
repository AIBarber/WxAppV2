.container{
    background:#fff;
}
.ar_coverpath{
    width:100%;
    margin:0;
    box-sizing:border-box;
}
.ar_coverpath image{
    width:100%;
    height:390rpx;
}
.ar_cont{
    background: #fff;
    color:#666666;
    box-sizing:border-box;
}
.ar_cont image{
    width:60rpx;
    height:60rpx;
}
.ar_cont .ar_cont_h1,
.ar_cont .ar_cont_price{
    font-size: 32rpx;
    font-weight: 600;
    line-height: 64rpx;
    color:#000;
}
.ar_cont .ar_cont_price{
    color: #c5c2c2;
    font-size: 30rpx;
    margin-left:1rpx;
}
.ar_line{
    width:100%;
    height:1rpx;
    content: '';
    background: #ddd;
    margin:1rpx 0rpx;
}
.ar_book{
    background:#d24a58;
    font-size: 32rpx;
    color:#fff;
    border-radius: 0rpx;
    margin:40rpx 0rpx 10rpx;
}
.summary {
	background: #0099ff00;
	display: flex;
	flex-direction: row;
	align-items: center;
}

/*头像*/
.summary .avatar {
	width: 80px;
	height: 80px;
	margin: 10px;
	border-radius: 50%;
  
}

/*昵称*/
.summary .nickname {
	color:gray;
	font-size: 16px;
}
.summary .nickname1 {
	color: rgb(7, 7, 7);
	font-size: 10px;
}
.summary .nick {
	display: flex;
	flex-direction:column;
}