checkbox .wx-checkbox-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx; /* 背景的宽 */
   height: 40rpx; /* 背景的高 */
   background: #ccc;
}
/* 选中后的背景样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: none;
   background: #ccc;
}
/* 选中后的对勾样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;/* 选中后对勾大小*/
   height: 40rpx;/* 选中后对勾大小 */
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; 
   color:black; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}

.service{
  width: 35%;
  height: 60rpx;
  margin-left: 10px;
  margin-right: 10px;
  border: 1px solid rgb(219, 211, 211);
  font-size: 15px;
  text-align: center;
}