.select_box {
    background-color: rgb(255, 250, 250);
    /* padding: 0 10rpx; */
    width: 40%;
    margin-top: 5px;
    position: absolute;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;
}
 
@keyframes myfirst {
    from {
        height: 0rpx;
    }
    to {
        height: 120rpx;
    }
}
 
