.select_box {
    background-color: white;
    width: 40%;
    padding-top: 0rpx;
    padding-left: 0rpx;
    margin-top: 15rpx;
    margin-left: -13rpx;
    position: absolute;
    z-index: 2;
    overflow: hidden;
    animation: myfirst 0.5s;
}
 
@keyframes myfirst {
    from {
        height: 0rpx;
    }
    to {
        height: 120rpx;
    }
}
 
.select_one {
    height: 60rpx;
    line-height: 60rpx;
