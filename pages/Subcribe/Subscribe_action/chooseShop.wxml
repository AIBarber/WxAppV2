<import src='../../template/shopList_order.wxml'/>

<view class="titleView">
 <view class="return" bindtap='returnBtn'>
  <image class="returnImg" src='../../../icon/arrow_xia.png' mode='scaleToFill'></image>
  <text class="" style=' margin-left:10rpx;margin-top:30rpx;line-height:0rpx;' bindtap='returnToServer'>返回</text>
 </view>
 <view class="title">选择店铺</view>
 </view>
  
 <form bindsubmit='formSubmit' bindreset='formReset'>
 <view class="container">
 
 <view class='radioView'>
 <radio-group class="radio-group"  bindchange="radioChange">
  <label class="radio">
    <text>不限时间</text><radio class="rad" value="0"/>
  </label>
   <label class="radio">
    <text>选择时间</text><radio class="rad" value="1" />
  </label>
  </radio-group>
 <checkbox-group class="radio-group"  bindchange="radioChange2">
   <label class="radio">
    <text>接受调整</text><checkbox class="rad" checked='{{checked}}' value="1" />
  </label>
  </checkbox-group>
 </view>

 <view class="chooseTime">
   <view class="{{(flag1==1||flag4==4||flag7==7)?'timeTable':'normal'}}" style='height:30%;font-size:28rpx; line-height:93rpx; '>上午(12:00)之前</view>
   <view class="{{(flag2==2||flag5==5||flag8==8)?'timeTable':'normal'}}" style='height:30%;font-size:28rpx; line-height:70rpx;display:flex; flex-direction:column;'><text style='margin-top:-10rpx;'>下午</text><text style='margin-top:-25rpx;'>(12:00-18:00)</text></view>
   <view class="{{(flag3==3||flag6==6||flag9==9)?'timeTable':'normal'}}"style='height:30%;font-size:28rpx; line-height:93rpx;'>晚上(18:00)之后</view>
   <view class="{{flag1==1?'timeTable':(flag1==11?'touch':'notouch')}}" bindtap='choiceTime' id="1">今天上午</view>
   <view class="{{flag2==2?'timeTable':(flag2==22?'touch':'notouch')}}" bindtap='choiceTime' id="2">今天下午</view>
   <view class="{{flag3==3?'timeTable':(flag3==33?'touch':'notouch')}}" bindtap='choiceTime' id="3">今天晚上</view>
   <view class="{{flag4==4?'timeTable':(flag4==44?'touch':'notouch')}}" bindtap='choiceTime' id="4">明天上午</view>
   <view class="{{flag5==5?'timeTable':(flag5==55?'touch':'notouch')}}" bindtap='choiceTime' id="5">明天下午</view>
   <view class="{{flag6==6?'timeTable':(flag6==66?'touch':'notouch')}}" bindtap='choiceTime' id="6">明天晚上</view>
   <view class="{{flag7==7?'timeTable':(flag7==77?'touch':'notouch')}}" bindtap='choiceTime' id="7">后天上午</view>
   <view class="{{flag8==8?'timeTable':(flag8==88?'touch':'notouch')}}" bindtap='choiceTime' id="8">后天下午</view>
   <view class="{{flag9==9?'timeTable':(flag9==99?'touch':'notouch')}}" bindtap='choiceTime' id="9">后天晚上</view>
 </view>
