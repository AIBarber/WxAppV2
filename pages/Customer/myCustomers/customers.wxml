<!--pages/new/new.wxml-->
<view class="swiper-tab">
  <view class="swiper-tab-list1 {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">即将理发的顾客</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">最近理发的顾客</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" bindchange="bindChange">

  <swiper-item>
    <scroll-view scroll-y style="height: 360px;">
      <view wx:if="{{customerListWillHaircut[curIndex]}}">
        <block wx:for="{{customerListWillHaircut}}" wx:key="item.customerId">
          <view class="summary" bindtap="navigate">
            <!-- <view class="avatar-container"> -->
            <image src="{{item.headurl}}" class="avatar" />
            <!-- </view> -->
            <view class="nick">
              <view class="nickname">积分：
                <text class="nickname">{{item.score}}</text>
              </view>
              <view class="nickname">时间：
                <text class="nickname">{{item.hairCutTime}}</text>
              </view>
            </view>
          </view>
          <view class="ar_line"></view>
        </block>
      </view>
    </scroll-view>
  </swiper-item>
  <swiper-item>
    <scroll-view scroll-y style="height: 360px;">
      <view wx:if="{{customerListNearTimeHaircut[curIndex]}}">
        <block wx:for="{{customerListNearTimeHaircut}}" wx:for-item="item" wx:for-index="index">
          <view class="summary" bindtap="navigate">
            <!-- <view class="avatar-container"> -->
            <image src="{{item.headurl}}" class="avatar" />
            <!-- </view> -->
            <view class="nick">
              <view class="nickname">积分：
                <text class="nickname">{{item.score}}</text>
              </view>
              <view class="nickname">时间：
                <text class="nickname">{{item.hairCutTime}}</text>
              </view>
            </view>
          </view>
          <view class="ar_line"></view>
        </block>
      </view>
    </scroll-view>
  </swiper-item>



</swiper>