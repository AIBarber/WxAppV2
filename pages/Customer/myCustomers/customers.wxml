<!--pages/new/new.wxml-->

<scroll-view scroll-y style="height: 500px;">
<view class="swiper-tab-list">即将理发的顾客</view>
  <view>
    <block wx:for="{{customerListWillHaircut}}" wx:key="item.customerId">
      <view class="summary" bindtap="navigate">
        <!-- <view class="avatar-container"> -->
        <image src="{{item.headurl}}" class="avatar" />
        <!-- </view> -->
        <view class="nick">
          <view class="nickname">顾客：
            <text class="nickname">{{item.name}}</text>
          </view>
          <view class="nickname">时间：
            <text class="nickname">{{item.hairCutTime}}</text>
          </view>
        </view>
      </view>
      <view class="ar_line"></view>
    </block>
  </view>
<view class="swiper-tab-list">最近理发的顾客</view>
  <view wx:if="{{customerListNearTimeHaircut[curIndex]}}">
    <block wx:for="{{customerListNearTimeHaircut}}" wx:for-item="item" wx:for-index="index">
      <view class="summary" bindtap="navigate">
        <!-- <view class="avatar-container"> -->
        <image src="{{item.headurl}}" class="avatar" />
        <!-- </view> -->
        <view class="nick">
          <view class="nickname">顾客：
            <text class="nickname">{{item.name}}</text>
          </view>
          <view class="nickname">时间：
            <text class="nickname">{{item.hairCutTime}}</text>
          </view>
        </view>
      </view>
      <view class="ar_line"></view>
    </block>
  </view>
</scroll-view>
